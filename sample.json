{
  "title": "Blog Post",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "likes": {
      "type": "integer",
      "minimum": 0
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "user": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "datePosted": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "user", "comment", "datePosted"]
      }
    }
  },
  "required": ["id", "title", "author", "content", "datePublished", "tags", "likes", "comments"]
}
