{
  "title": "Person",
  "description": "A person in our system",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "description": "The person's first name.",
      "minLength": 1,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "description": "The person's last name.",
      "minLength": 1,
      "maxLength": 50
    },
    "age": {
      "description": "Age in years which must be equal to or greater than zero.",
      "type": "integer",
      "minimum": 0,
      "maximum": 150
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The person's email address"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "enum": ["AL", "AK", "AZ", /* ...other states... */]
        },
        "zipCode": {
          "type": "string",
          "pattern": "^[0-9]{5}(-[0-9]{4})?$"
        }
      },
      "required": ["street", "city", "state", "zipCode"],
      "additionalProperties": false
    },
    "phoneNumbers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["home", "work", "mobile"]
          },
          "number": {
            "type": "string",
            "pattern": "^\\+?[0-9\\-\\s]+$"
          }
        },
        "required": ["type", "number"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "registrationDate": {
      "type": "string",
      "format": "date-time"
    },
    "preferences": {
      "type": "object",
      "properties": {
        "newsletter": {
          "type": "boolean"
        },
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "system"]
        }
      }
    }
  },
  "required": ["firstName", "lastName", "email"],
  "additionalProperties": false
}
