{
  "title": "User Profile",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "description": "Username (3-20 characters)."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Valid email address."
    },
    "age": {
      "type": "integer",
      "minimum": 13,
      "description": "Age (must be 13 or older)."
    },
    "bio": {
      "type": "string",
      "maxLength": 500,
      "description": "Short bio (max 500 characters)."
    },
    "socialLinks": {
      "type": "object",
      "description": "Social media profiles.",
      "properties": {
        "twitter": {
          "type": "string",
          "format": "uri",
          "description": "Twitter profile URL."
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "LinkedIn profile URL."
        },
        "github": {
          "type": "string",
          "format": "uri",
          "description": "GitHub profile URL."
        }
      },
      "additionalProperties": false
    },
    "skills": {
      "type": "array",
      "description": "List of skills.",
      "items": {
        "type": "string",
        "description": "Skill (e.g., JavaScript, React, Python)."
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "isActive": {
      "type": "boolean",
      "description": "Account status."
    }
  },
  "required": ["username", "email", "isActive"]
}
